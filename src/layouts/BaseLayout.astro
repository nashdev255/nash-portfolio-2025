---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="ja">
  <head prefix="og: https://ogp.me/ns#">
    <title>Nash | Digital Content Developer</title>

    <meta charset="utf8" />

    <meta property="og:url" content="https://nashdev255.github.io/nash-portfolio-2025/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Nash | Digital Content Developer">
    <meta property="og:site_name" content="Nash | Digital Content Developer">
    <meta property="og:image" content="https://nashdev255.github.io/nash-portfolio-2025/dango.png">
    <meta property="og:image:width" content="200">
    <meta property="og:image:height" content="200">
    <meta property="og:image:type" content="image/png">

    <meta name="twitter:card" content="summary">
    <meta name="twitter:image" content="https://nashdev255.github.io/nash-portfolio-2025/dango.png">
    <meta name="twitter:site" content="@nashdev255">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="icon" href="https://nashdev255.github.io/nash-portfolio-2025/dango.png">
  </head>
  <body class="bg-white text-gray-900 font-sans max-w-2xl mx-auto">
